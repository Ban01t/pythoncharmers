while True:
    Num= int(input('Enter First Number:'))
    Num_2= int(input('Enter Second Number:'))
    Num_3= int(input('Enter Third Number:'))
    Numt=Num+Num_2+Num_3
    print(Num,"+",Num_2,"+",Num_3)
    print("=",Numt)
    ch=input("Enter Numbers Again ? (Y/N)")
    if ch in "Nn":
        break
print("Thank You !! !")
